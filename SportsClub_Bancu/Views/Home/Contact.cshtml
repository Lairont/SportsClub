@{
    // Устанавливаем уникальный класс для body/main на этой странице
    ViewData["BodyClass"] = "page-contact-layout";
    ViewData["Title"] = "Контакты";
}

<style>
    .img-header {
        display: none;
    }
</style>

@* Контакты *@
﻿<div class="container-row">

    <div class="row-item">

        <img class="item-img" src="~/images/email.png" alt="Email Icon" />
        <h2>Email</h2>
        <p>TTiP@mail.ru</p>
    </div>

    <div class="row-item">
        <img class="item-img" src="~/images/telefon.png" alt="Phone Icon" />
        <h2>Телефон</h2>
        <p>+ (373) 777-77-777</p>
    </div>

    <div class="row-item">
        <img class="item-img" src="~/images/mesto.png" alt="Address Icon" />
        <h2>Адрес</h2>
        <p>Тираспольский техникум информатики и права</p>
    </div>
</div>



<div class="container-section">
    <h2 class="info-sections">Местоположение</h2>
    <div class="map">
        <script type="text/javascript"
                charset="utf-8"
                src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A0bd7e48106881de7e54ca433b44c58d4f254c0944f7dbc60dacdecb83beaf9d7&amp;width=100%25&amp;height=473&amp;lang=ru_RU&amp;scroll=true">
        </script>
    </div>
</div>

<footer>
    <div class="footer-left">
        <!-- Заголовок для FitStock, можно использовать для стилизации логотипа/названия -->
        <h2>FitStock</h2>
        <p>
            Наша система помогает спортивным клубам и секциям эффективно управлять инвентарём и оборудованием.
            Вы сможете легко отслеживать состояние, местоположение и использование всех спортивных принадлежностей,
            планировать выдачу и возврат, а также оптимизировать закупки, экономя время и ресурсы клуба.
        </p>
        <div class="footer-TravelAgency">
            &copy; 2025 FitStock Bancu
        </div>
    </div>

    <!-- Блок Контакты с НОВЫМИ КЛАССАМИ -->
    <div class="contact-grid">

        <!-- 1. Email -->
        <a href="mailto:TTiP@mail.ru" class="contact-card">
            <!-- Оставлены ваши ссылки на изображения, но обратите внимание, что они могут не загрузиться -->
            <img class="card-icon" src="~/images/email.png" alt="Email Icon" />
            <h2>Email</h2>
            <p>TTiP@mail.ru</p>
        </a>

        <!-- 2. Телефон -->
        <a href="tel:+37377777777" class="contact-card">
            <img class="card-icon" src="~/images/telefon.png" alt="Phone Icon" />
            <h2>Телефон</h2>
            <p>+ (373) 777-77-777</p>
        </a>

        <!-- 3. Адрес -->
        <div class="contact-card">
            <img class="card-icon" src="~/images/mesto.png" alt="Address Icon" />
            <h2>Адрес</h2>
            <p>Тираспольский техникум информатики и права</p>
        </div>
    </div>

    <!-- НОВЫЙ БЛОК: Социальные сети -->
    <div class="social-media-container">
        <h3>Мы в социальных сетях</h3>
        <div class="social-icons-wrapper">
            <a href="#" target="_blank" class="social-icon">
                <img src="~/images/telegram.png" alt="Telegram Icon" />
            </a>
            <a href="#" target="_blank" class="social-icon">
                <img src="~/images/vk.png" alt="VKontakte Icon" />
            </a>
            <a href="#" target="_blank" class="social-icon">
                <img src="~/images/instagram.png" alt="Instagram Icon" />
            </a>
        </div>
    </div>
</footer>

