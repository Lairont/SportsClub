<div class="container-login-registration">
    <div class="overlay" id="click-to-hide"></div>

    <div class="block-container">
        <div class="block">
            <section class="block_item block-item">
                <button class="block-item_btn signin-btn">Войти</button>
            </section>

            <section class="block_item block-item">
                <h2 class="block-item_title">У вас нет аккаунта?</h2>
                <button class="block-item_btn signup-btn">Зарегистрироваться</button>
            </section>
        </div>

        <div class="form-box">
            <form class="form form_signin">

                <h3 class="form_title">Вход</h3>
                <label id="email">
                    <input type="text" placeholder=" " id="signin_email"/>
                    <span>Почта</span>
                </label>

                <label id="password">
                    <input type="password" placeholder=" " id="signin_password" />
                    <span>Пароль</span>
                </label>

                <div class="form-btn form_btn_signin">Войти</div>
               
                @* d *@
                <div id="error-messages-singin"></div>
            </form>

            <form class="form form_signup">
                <h3 class="form_title">Регистрация</h3>

                <label id="login">
                    <input type="text" placeholder=" " id="signup_login"/>
                    <span>Логин</span>
                </label>

                <label id="email">
                    <input type="text" placeholder=" " id="signup_email"/>
                    <span>Почта</span>
                </label>

                <label id="password">
                    <input type="password" placeholder=" " id="signup_password"/>
                    <span>Пароль</span>
                </label>

                <label id="confirm_password">
                    <input type="password" placeholder=" " id="signup_confirm_password"/>
                    <span>Подтвердите пароль</span>
                </label>

                <div class="form-btn form_btn_signup">Зарегистрироваться</div>

                @* d *@
                <div id="error-messages-singup"></div>
            </form>
        </div>
    </div>
</div>


